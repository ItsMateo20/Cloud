generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       Int           @id @default(autoincrement())
  email    String        @unique
  password String
  settings UserSettings?
}

model UserSettings {
  id       Int    @id @default(autoincrement())
  userId   Int    @unique
  theme    String @default("light")
  language String @default("en_US")
  user     User   @relation(fields: [userId], references: [id])
}
