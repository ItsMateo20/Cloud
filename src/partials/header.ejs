                        <span class="navbar-text me-3">Katalog: <span>./</span>
                        </span>
                        <% } else { %>
                            <span class="navbar-text">Katalog: <a class="navbar-text" href="/folder/root">./</a>
                                <% const folderNames=directory.split('/') %>
                                    <% folderNames.forEach((folder, index)=> { %>
                                        <% if (index===folderNames.length - 1) { %>
                                            <span class="navbar-text">
                                                <%= folder %>
                                            </span>
                                            <% } else { %>
                                                <% if (index===0) return; %>
                                                    <a class="navbar-text"
                                                        href="/folder?folder=<%= folderNames.slice(0, index + 1).join('/') %>">
                                                        <%= folder %>
                                                    </a>
                                                    <span class="navbar-text">/</span>
                                                    <% } %>
                                                        <% }); %>
                            </span>
                            <% } %>
